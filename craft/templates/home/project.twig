{# Controls the layout for project entries on home page #}
	{% for block in entry.media %}


		{% if block.type == 'image' %}
			{% set show = block.showOnHomePage | length %}
			{% set image = block.image.first() %}
			{% set verticalImg = block.orientation == 'Vertical' %}

			{% if image | length and block.column == 'First' and show %}
				<img src="{% if verticalImg %}{{ image.url(vertical) }}{% else %}{{ image.url(horizontal) }}{% endif %}" alt="{{ image.title }}">
			{% elseif image | length and block.column == 'Second' and show %}
				<img src="{% if verticalImg %}{{ image.url(vertical) }}{% else %}{{ image.url(horizontal) }}{% endif %}" alt="{{ image.title }}">
			{% endif %}
		{% elseif block.type == 'video' %}
			{% set showVid = block.showOnHomePage | length %}
			{% set video = block.video %}
			{% set first = video | length and block.column == 'First' %}
			{% set second = video | length and block.column == 'Second' %}
			{% if first or second and showVid  %}
				<div class="vid-block">
					<iframe width="100%" height="315" src="//www.youtube.com/embed/{{ video }}" frameborder="0" allowfullscreen></iframe>
				</div>
			{% endif %}
		{% endif %}
	{% endfor %}