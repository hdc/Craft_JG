{% extends "_layout" %}
{% set title =  entry.title ~ ' | ' ~ entry.parent('title') %}
{% block content %}
<div class="inset">
    <article class="section">
        <div class="grid_item">
            <div class="content_block">
                <h1 class="hdr2">{{ entry.title | capitalize }}</h1>

                <ul class="work_meta">
                    {% set seriesName = entry.parent('title') %}
                    {% if seriesName is not null %}<li class="work_meta-item">{{ seriesName }}</li>{% endif %}
                    {% if entry.materials | length %} <li class="work_meta-item">{{ entry.materials }}</li>{% endif %}
                    {% if entry.dimensions | length %}<li class="work_meta-item">{{ entry.dimensions }}</li>{% endif %}
                </ul>
                <div class="work_description">
                    {{ entry.description }}
                </div>
            </div>
        </div>

        <div class="media_container">

            <div class="grid_item--media">
                {% if entry.media | length %}
                <div class="media-block">
                    {% for block in entry.media %}
                    {% if block.type == 'firstColumn' %}
                    {% set image = block.fcImage.first() %}
                    {% if image | length %}
                    <div class="img-block">
                        <img src="{{ image.url }}" alt="{{ image.title }}">
                    </div>
                    {% endif %}
                    {% endif %}
                    {% endfor %}
                </div>

                {% endif %}
            </div>

            <div class="grid_item--media">
                {% if entry.media | length %}
                <div class="media-block">
                    {% for block in entry.media %}
                    {% if block.type == 'secondColumn' %}
                    {% set image = block.scImage.first() %}
                    {% if image | length %}
                    <div class="img-block">
                        <img src="{{ image.url }}" alt="{{ image.title }}">
                    </div>

                    {% endif %}
                    {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            </div>

       </div>

    </article>
</div>

{% set params = { section: 'gallery', type: 'project' } %}
{% set prevArt = entry.getPrev(params) %}
{% set nextArt = entry.getNext(params) %}

<div class="page_nav">
    {% if prevArt %}
    <a class="page_nav-item--left" href="{{ prevArt.url }}"></a>
    {% endif %}

    {% if nextArt %}
    <a class="page_nav-item--right" href="{{ nextArt.url }}"></a>
    {% endif %}
</div>
{% endblock %}