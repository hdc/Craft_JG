{% if block.type == 'image' %}
	{% set image = block.image.first() %}
	{% if image | length and block.orientation == 'Horizontal'  %}
		{{ include ('_partials/_image-block', {orientation: horizontal}) }}
	{% elseif image | length and block.orientation == 'Vertical' %}
		{{ include ('_partials/_image-block', {orientation: vertical}) }}
	{% endif %}
{% elseif block.type == 'video' %}
	{% set video = block.video %}
	{% if video | length %}
		<div class="vid-block">
			<iframe width="100%" height="315" src="//www.youtube.com/embed/{{ video }}" frameborder="0" allowfullscreen></iframe>
		</div>
	{% endif %}
{% endif %}
